{% extends 'base.html.twig' %}

{% block body %}


	<h2>Technos</h2>

	{# On boucle sur une carte bootstrap pour afficher toutes les technos #}

	{{ dump(technos)}}
{% for techno in technos %}

	<div class="card" style="width: 18rem;">
		<img class="card-img-top" src="{{ techno.image }}" alt="image de la techno">
		<div class="card-body">
			<h5 class="card-title">{{ techno.name }}</h5>
			<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
			<a href="#" class="btn btn-primary">Go somewhere</a>
		</div>
	</div>

	{% endfor %}
{% endblock %}
